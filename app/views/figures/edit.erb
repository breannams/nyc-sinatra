<h1>Edit <%=@figure.name %></h1>

  <form action="/figures/<%= @figure.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

    
    <h3>Edit the Figure's Title:</h3>

    <label>Existing Titles:</label>
    <p><% @title.each do |title| %>
      <li>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="title_<%=title.id%>"> <%='checked' if @figure.titles.include?(title) %><%= title.name %></input></li>
    <% end %></p>
    

    <p><label>Or Create a New Title:</label>
   <input type="text" name="title[name]" id="new_title"></input> </p>
    <br></br>

    <h3>Edit the Figure's Landmarks:</h3>

    <label>Existing Landmarks:</label>
    <p><% @landmark.each do |landmark| %>
     <li>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="landmark_<%=landmark.id%>"> <%='checked' if @figure.landmarks.include?(landmark) %><%= landmark.name %></input></li>
    <% end %></p>
  

    <label>Or Create a New Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark"></input>



    <input type="submit" value="Edit Figure">
  </form>
